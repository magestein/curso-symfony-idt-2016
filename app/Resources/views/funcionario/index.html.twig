{% extends 'layoutCliente.html.twig' %}

{% block body %}
    <h1>Funcionarios list</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>CI</th>
                <th>Tipodocumento</th>
                <th>Fechanacimiento</th>
                <th>Sexo</th>
                <th>Salario</th>
                <th>Email</th>
                <th>Fechainicio</th>
                <th>Fechaentrada</th>
                <th>Fechasalida</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for funcionario in funcionarios %}
            <tr>
                <td>{{ funcionario.nombre }} {{ funcionario.apellido }}</td>
                <td class="text-center">{{ funcionario.documentoIdentidad }}</td>
                <td>{{ funcionario.tipoDocumento }}</td>
                <td class="text-center">{% if funcionario.fechaNacimiento %}{{ funcionario.fechaNacimiento|date('d/m/Y') }}{% endif %}</td>
                <td>{{ funcionario.sexo }}</td>
                <td class="text-right">{{ funcionario.salario }}</td>
                <td>{{ funcionario.email }}</td>
                <td class="text-center">{% if funcionario.fechaInicio %}{{ funcionario.fechaInicio|date('d/m/Y') }}{% endif %}</td>
                <td class="text-center">{% if funcionario.fechaEntrada %}{{ funcionario.fechaEntrada|date('H:i:s') }}{% endif %}</td>
                <td class="text-center">{% if funcionario.fechaSalida %}{{ funcionario.fechaSalida|date('H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('funcionarios_show', { 'id': funcionario.id }) }}">Ver</a>
                        </li>
                        <li>
                            <a href="{{ path('funcionarios_edit', { 'id': funcionario.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('funcionarios_new') }}">Crear nuevo funcionario</a>
        </li>
    </ul>
{% endblock %}
