{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="row">

    <div class="col-md-offset-3 col-md-6">

        <div class="panel panel-default">
            <div class="panel-heading">Ingresar al Sistema</div>
            <div class="panel-body">

                <form action="{{ path("fos_user_security_check") }}" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                    {% endif %}

                    <div class="form-group">
                        <label for="username">{{ 'security.login.username'|trans }}</label>
                        <input id="username" name="_username" type="text" class="form-control"
                               value="{{ last_username }}"
                               placeholder="{{ 'security.login.username'|trans }}" required="required">
                    </div>
                    <div class="form-group">
                        <label for="password">{{ 'security.login.password'|trans }}</label>
                        <input id="password" name="_password" type="password" class="form-control"
                               placeholder="{{ 'security.login.password'|trans }}">
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="remember_me" name="_remember_me"
                                   value="on"/> {{ 'security.login.remember_me'|trans }}
                        </label>
                    </div>
                    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>
                </form>

            </div>
        </div>

    </div>
</div>